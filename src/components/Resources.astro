---
const resources = [
  {
    title: "Blog",
    description: "Read insightful articles and technical deep-dives from our community.",
    link: "https://breachforce.net/"
  },
  {
    title: "Archives",
    description: "Access past meetup talks, slides, and resources.",
    link: "https://breachforce.net/deck"
  }
];
---

<section class="resources section">
  <div class="container">
    <h2 class="section-title">Resources & Navigation</h2>
    <div class="resources-grid">
      {resources.map((resource) => (
        <a href={resource.link} class="resource-card" target="_blank" rel="noopener noreferrer">
          <h3 class="resource-title">{resource.title}</h3>
          <p class="resource-description">{resource.description}</p>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .resources {
    background-color: var(--bg-primary);
  }

  .section-title {
    font-size: 3em;
    margin-bottom: 4rem;
    font-weight: 300;
    font-family: 'Fira Mono';
  }

  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1100px;
    margin: 0 auto;
  }

  .resource-card {
    background-color: var(--bg-card);
    padding: 1.5rem 1.5rem; /* Decreased padding */
    /* border-radius: 8px; */
    transition: all 0.3s ease;
    display: block;
  }

  .resource-card:hover {
    background-color: #2a2a2a;
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
  }

  .resource-title {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    font-weight: 500;
    font-family: 'Fira Mono';
    color: var(--text-primary);
  }

  .resource-description {
    color: var(--text-secondary);
    line-height: 1.6;
    font-size: 1rem;
    font-family: 'Fira Sans';
    font-weight: 400;
  }

  @media (max-width: 768px) {
    .resources-grid {
      grid-template-columns: 1fr;
    }

    .resource-card {
      padding: 2rem;
    }
  }
</style>
