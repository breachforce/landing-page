---
const resources = [
  {
    title: "Blog",
    description: "Read insightful articles and technical deep-dives from our community.",
    link: "https://breachforce.net/blog"
  },
  {
    title: "Archives",
    description: "Access past meetup talks, slides, and resources.",
    link: "https://breachforce.net/archives"
  }
];
---

<section class="resources section">
  <div class="container">
    <h2 class="section-title">Resources & Navigation</h2>
    <div class="resources-grid">
      {resources.map((resource) => (
        <a href={resource.link} class="resource-card">
          <h3 class="resource-title">{resource.title}</h3>
          <p class="resource-description">{resource.description}</p>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .resources {
    background-color: var(--bg-primary);
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 3rem;
    font-weight: 600;
  }

  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .resource-card {
    background-color: var(--bg-card);
    padding: 2.5rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    display: block;
  }

  .resource-card:hover {
    background-color: #2a2a2a;
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
  }

  .resource-title {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .resource-description {
    color: var(--text-secondary);
    line-height: 1.6;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .resources-grid {
      grid-template-columns: 1fr;
    }

    .resource-card {
      padding: 2rem;
    }
  }
</style>