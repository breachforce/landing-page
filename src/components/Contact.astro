<style>
  .contact {
    background-color: #201e25;
    padding-bottom: 3rem;
  }

  .contact-box {
    background-color: #0f0f10;
    /* border: 2px solid #333; */
    /* border-radius: 8px; */
    padding: 3rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 1.5rem;
    font-weight: 500;
    font-family: "Fira Mono";
    color: #FBF3FA;
  }

  .contact-text {
    color: #EOD6DE;
    margin-bottom: 1.5rem;
    font-size: 1em;
    font-weight: 400;
    font-family: "Fira Sans";
  }

  .contact-email {
    color: #EOD6DE;
    margin-bottom: 1.5rem;
    font-size: 1em;
    font-weight: 400;
    font-family: "Fira Sans";
  }

  .contact-email a {
    color: #864af9; /* Changed from var(--accent-pink) */
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .contact-email a:hover {
    color: #7c3aed; /* Changed from #ff69b4 */
  }

  .copyright {
    color: #EOD6DE;
    font-size: 1em;
    font-weight: 400;
    font-family: "Fira Sans";
  }

  @media (max-width: 768px) {
    .contact-box {
      padding: 2rem;
      margin: 0 1rem;
    }
    
    .contact {
      text-align: center;
    }
  }
</style>
