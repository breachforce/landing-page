<section class="social section">
  <div class="container">
    <h2 class="section-title">Join the Conversation</h2>
    <div class="social-grid">
      {socials.map((social) => (
        <a href={social.link} class="social-card" target="_blank" rel="noopener noreferrer">
          <div class="social-icon" set:html={iconMap[social.icon]} />
          <h3 class="social-name">{social.name}</h3>
          <p class="social-description">{social.description}</p>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .social {
    background-color: var(--bg-primary);
  }

  .section-title {
    font-size: 3em;
    margin-bottom: 4rem;
    font-weight: 300;
    font-family: 'Fira Sans', sans-serif;
  }

  .social-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
    max-width: 1100px;
    margin: 0 auto;
  }

  .social-card {
    display: block;
    text-align: left;
    transition: transform 0.3s ease;
  }

  .social-card:hover {
    transform: translateY(-5px);
  }

  .social-icon {
    color: #864af9; /* Changed from #ff6bd8 */
    margin-bottom: -1rem; /* Controls space between icon and title */
    display: inline-block;
    width: 120px; /* Increased size */
    height: 120px; /* Increased size */
  }

  .social-icon svg {
    width: 100%;
    height: 100%;
  }

  .social-name {
    font-size: 1.5rem;
    margin-top: -2.5rem; /* Reset margin */
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--text-primary);
  }

  .social-description {
    color: var(--text-secondary);
    line-height: 1.6;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .social-grid {
      gap: 2rem;
      grid-template-columns: 1fr;
    }

    .social-card {
      text-align: center;
    }
  }
</style>
