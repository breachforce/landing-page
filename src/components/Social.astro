---
const socials = [
  {
    name: "LinkedIn",
    icon: "in",
    link: "https://linkedin.com/company/breachforce",
    description: "Connect with us on LinkedIn for updates and discussions."
  },
  {
    name: "GitHub", 
    icon: "‚ü®‚ü©",
    link: "https://github.com/breachforce",
    description: "Explore our projects and contribute to open-source security tools."
  },
  {
    name: "X (Twitter)",
    icon: "ùïè",
    link: "https://twitter.com/breachforce",
    description: "Follow us for real-time security news and community highlights."
  }
];
---

<section class="social section">
  <div class="container">
    <h2 class="section-title">Join the Conversation</h2>
    <div class="social-grid">
      {socials.map((social) => (
        <a href={social.link} class="social-card" target="_blank" rel="noopener noreferrer">
          <div class="social-icon">{social.icon}</div>
          <h3 class="social-name">{social.name}</h3>
          <p class="social-description">{social.description}</p>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .social {
    background-color: var(--bg-primary);
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 4rem;
    font-weight: 600;
  }

  .social-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
    max-width: 1100px;
    margin: 0 auto;
  }

  .social-card {
    display: block;
    text-align: left;
    transition: transform 0.3s ease;
  }

  .social-card:hover {
    transform: translateY(-5px);
  }

  .social-icon {
    font-size: 3rem;
    color: var(--accent-pink);
    margin-bottom: 1.5rem;
    font-family: var(--font-mono);
    display: inline-block;
  }

  .social-name {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .social-description {
    color: var(--text-secondary);
    line-height: 1.6;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .social-grid {
      gap: 2rem;
      grid-template-columns: 1fr;
    }

    .social-card {
      text-align: center;
    }
  }
</style>