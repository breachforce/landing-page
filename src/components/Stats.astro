---
const stats = [
  { number: "20+", label: "Meetups Held" },
  { number: "20+", label: "Speakers Hosted" },
  { number: "1500+", label: "Attendees" }
];
---

<section class="stats">
  <div class="container">
    <h2 class="section-title">BreachForce by the Numbers</h2>
    <div class="stats-grid">
      {stats.map((stat) => (
        <div class="stat-card">
          <div class="stat-number">{stat.number}</div>
          <div class="stat-label">{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .stats {
    background-color: #ff6bd8;
    padding: 4rem 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .container {
    background-color: #0a0a0a;
    color: #ffffff;
    border-radius: 8px;
    padding: 3rem 2rem;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 500;
    font-family: 'Fira Mono', monospace;
    margin-bottom: 2rem; /* Reduced from 4rem */
    letter-spacing: -0.02em;
    text-align: left;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .stat-card {
    padding: 1rem;
  }

  .stat-number {
    font-size: 4rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 0.5rem;
    font-family: var(--font-mono);
    line-height: 1;
  }

  .stat-label {
    font-size: 1.125rem;
    color: #a0a0a0;
    text-transform: capitalize;
    font-weight: 400;
    letter-spacing: normal;
  }

  @media (max-width: 768px) {
    .container {
      padding: 2.5rem 1.5rem;
    }

    .section-title {
      font-size: 2rem;
      margin-bottom: 1.5rem;
    }

    .stats-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .stat-number {
      font-size: 3rem;
    }

    .stat-label {
      font-size: 1rem;
    }
  }
</style>
