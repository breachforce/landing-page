---
import { Image } from 'astro:assets';
---

<section class="services section">
  <div class="container">
    <div class="services-content">
      <div class="services-image">
        <Image 
          src="https://res.cloudinary.com/dzw3rx183/image/upload/v1752433310/services_jfhnpu.jpg" 
          alt="BreachForce Consulting" 
          width={600}
          height={400}
          loading="lazy"
          format="webp"
        />
      </div>
      <div class="services-text">
        <h2 class="services-title">BreachForce Consulting: Your Cybersecurity Partner</h2>
        <p class="services-description">
          Looking to strengthen your digital defenses? Meet our team of seasoned security professionals with 10+ years of experience. Hire our experts to safeguard your business. By engaging our services, you not only enhance your security but also support our community initiatives.
        </p>
        <div class="services-buttons">
          <a href="mailto:sales@breachforce.net?subject=BreachForce%20Consulting%20Inquiry" class="btn btn-primary">Get In Touch</a>
          <a href="https://breachforce.net/consulting" target="_blank" rel="noopener noreferrer" class="btn btn-secondary">Learn More</a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .services {
    background-color: var(--bg-primary);
    padding: 6rem 0;
  }

  .services-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .services-image {
    overflow: hidden;
    border-radius: 8px;
  }

  .services-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    object-position: center right;
    transition: transform 0.3s ease;
  }

  .services-image:hover img {
    transform: scale(1.05);
  }

  .services-text {
    padding-left: 2rem;
  }

  .services-title {
    font-size: 2.5rem;
    font-weight: 500;
    font-family: 'Fira Mono';
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .services-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 2.5rem;
    font-family: 'Fira Sans';
    font-weight: 400;
  }

  .services-buttons {
    display: flex;
    gap: 1.5rem;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    /* border-radius: 6px; */
    text-decoration: none;
    font-weight: 500;
    font-family: 'Fira Sans';
    font-size: 1.2rem;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 2px solid transparent;
  }

  .btn-primary {
    background-color: #864af9; /* Changed from var(--accent-pink) */
    color: #ffffff; /* Changed from #000000 for better contrast */
    border-color: #864af9; /* Changed from var(--accent-pink) */
  }

  .btn-primary:hover {
    background-color: #7c3aed; /* Darker shade for hover */
    border-color: #7c3aed;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(134, 74, 249, 0.3); /* Changed shadow color */
  }

  .btn-secondary {
    border: 1px solid #864af9; /* Changed from #ff6bd8 */
    background-color: #0f0f10;
    border-radius: 0.125em;
    color: #864af9; /* Changed from #ff6bd8 */
  }

  .btn-secondary:hover {
    background-color: #333;
    color: #864af9; /* Changed from #ff6bd8 */
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 768px) {
    .services-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .services-text {
      padding-left: 0;
    }

    .services-title {
      font-size: 2rem;
    }

    .services-buttons {
      flex-direction: column;
      gap: 1rem;
    }

    .btn {
      width: 100%;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .services-title {
      font-size: 1.75rem;
    }

    .services-description {
      font-size: 1rem;
    }
  }
</style>
